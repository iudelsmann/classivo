{
  "rules": {
    "users": {
      "$user_id": {
        ".read": "auth != null && $user_id == auth.uid",
        ".write": "auth != null && $user_id == auth.uid"
      }
    },
    "courses": {
      "$course_id": {
        ".read": "data.child('members').child(auth.uid).exists()",
        ".write": "!data.exists() || data.child('members').child(auth.uid).exists()"
      }
    }
  }
}
